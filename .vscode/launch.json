    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) duck input",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/duck.exe",
            "args": ["-disable_runtime_optimisations", "input"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "E:/Programy/MinGW/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) duck tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/duck.exe",
            "args": ["scripts/tests.dk"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
